{% extends ('base.html.twig') %}
{% block title %}

Index!

{% endblock %}

{% block body %}
{% set foo = asset ('assets/img/slide01.png') %}
<header>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active" style="background-image: url('{{ foo }}')">
        <div class="carousel-caption d-none d-md-block">
          <h3>El Bar de Paco</h3>
          <p>Un lugar donde tomar buenas tapas</p>
        </div>
      </div>
      <!-- Slide Two - Set the background image for this slide in the line below -->
      <div class="carousel-item" style="background-image: url()">
        <div class="carousel-caption d-none d-md-block">
          <h3>El Bar de Paco</h3>
          <p>Con comida tradicional y de autor</p>
        </div>
      </div>
      <div class="carousel-item" style="background-image: url()">
        <div class="carousel-caption d-none d-md-block">
          <h3>El Bar de Paco</h3>
          <p>Carta renovada todas los meses</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</header>
  <div class="container">
    <h1 class="my-4">Nuestras mejores tapas</h1>
    {% for tapa in Tapas %}
    <div class="row">
      <div class="col-lg-4 col-sm-6">
        <div class="card h-100">
          <a href="{{ path ('tapaAction',{'id': tapa.id}) }}"><img class="card-img-top" src="{{ asset ( tapaImg~tapa.foto )}}" alt=""></a>
          <div class="card-body">
            <h4 class="card-title">
              <a href="">{{tapa.nombre}}</a>
            </h4>
            <h4 class="card-title">
              <a href="">{{tapa.nombre}}</a>
            </h4>
            <p class="card-text">{{tapa.descripcion}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
    <ul class="pagination justify-content-center">
      {% if paginaActual>1 %}
      <li class="page-item">
        <a href="{{path ('index', {pagina:paginaActual-1<1?paginaActual-1})}}" class="page-link" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Anterior</span>
        </a>
      </li>
      {% endif %}
      {% for i in 1..3 %}
      <li class="page-item">
        <a href="{{path ('index',{pagina:i})}}" class="page-link">{{i}}</a>
      </li>
      {% endfor %}
      {% if paginaActual<3 %}
      <li class="page-item">
        <a href="{{path ('index', {pagina:paginaActual+1<=3?paginaActual+1:paginaActual}) }}" class="page-link" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only"></span>
        </a>
      </li>
      {% endif %}

    </ul>
  </div>
  {% endfor %}
  
  
  {% endblock %}
